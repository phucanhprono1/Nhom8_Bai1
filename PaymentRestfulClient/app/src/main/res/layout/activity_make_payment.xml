<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakePayment">
  <EditText
      android:id="@+id/card_holder_name1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="100dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:hint="Name" />

  <EditText
      android:id="@+id/card_type1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="card type"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/card_number1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="card number"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/card_cvc1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:inputType="numberSigned"
      android:hint="CVC"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/expiration_year1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="exp year"
      android:minHeight="48dp" />

  <EditText
      android:id="@+id/expiration_month1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="exp month"
      android:minHeight="48dp" />
  <EditText
      android:id="@+id/number_of_people"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="20dp"
      android:ems="10"
      android:hint="exp month"
      android:minHeight="48dp" />

  <Button
      android:id="@+id/button_calculate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Calculate Fee"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"/>
  <TextView
      android:id="@+id/fee"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Fee:"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      />
</LinearLayout>